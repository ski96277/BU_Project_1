<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00899B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view_show"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"
            app:civ_border_color="#f9eaea"
            app:civ_border_width="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="Name : "
                android:textColor="#000"/>
        <TextView
            android:id="@+id/user_name_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingTop="12sp"
            android:textColor="#000"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="User Type :"
                android:textColor="#000"/>
        <TextView
            android:id="@+id/user_type_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingTop="12sp"
            android:textColor="#000"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="8sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="Depart :"
                android:textColor="#000"/>
        <TextView
            android:id="@+id/user_Dept_name_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingTop="12sp"
            android:textColor="#000"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/batch_TV"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="Batch :"
                android:textColor="#000"/>
        <TextView
            android:id="@+id/user_batch_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingTop="12sp"
            android:textColor="#000"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="E-mail :"
                android:textColor="#000"/>
        <TextView
            android:id="@+id/user_email_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingTop="12sp"
            android:textColor="#000"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phone_TV"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="Phone :"
                android:textColor="#000"/>
        <TextView
            android:id="@+id/user_phone_number_show"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:paddingLeft="10sp"
            android:paddingTop="12sp"
            android:textColor="#000"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50sp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:layout_marginRight="5sp"
                android:text="ID : "
                android:textColor="#000"/>

            <TextView
                android:id="@+id/user_id_show"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
