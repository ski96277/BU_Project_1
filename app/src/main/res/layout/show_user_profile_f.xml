<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8CD3EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Admin can see user Profile"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/admin_can_see_user_image_view_show"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"
            app:civ_border_color="#fff"
            app:civ_border_width="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="8sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="5sp"
                android:paddingTop="6sp"
                android:text="Name : "
                android:textColor="#000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/admin_can_see_user_name_show"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginTop="8sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="5sp"

                android:paddingTop="6sp"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="8sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="5sp"
                android:paddingTop="6sp"
                android:text="User : "
                android:textColor="#000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/admin_can_see_user_type_show"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginTop="8sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="5sp"
                android:paddingTop="6sp"
                android:textColor="#000"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginTop="8sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingTop="6sp"
                android:text="depart : "
                android:paddingLeft="5sp"
                android:layout_marginRight="5sp"
                android:textColor="#000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/admin_can_see_user_Dept_name_show"

                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginTop="8sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingTop="6sp"
                android:paddingLeft="5sp"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:paddingLeft="5sp"
            android:layout_marginRight="5sp"
            android:text="Batch : "
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/admin_can_see_user_batch_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:paddingLeft="5sp"
            android:textColor="#000"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:paddingLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:text="Email : "
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/admin_can_see_user_email_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5sp"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:textColor="#000"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView


            android:layout_width="0dp"
            android:layout_weight=".3"
            android:paddingLeft="5sp"
android:layout_marginRight="5sp"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:text="Phone : "
            android:textColor="#000"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textSize="20sp"/>
        <TextView
        android:id="@+id/admin_can_see_user_phone_number_show"


        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="5sp"

        android:layout_height="50sp"
        android:layout_marginTop="8sp"
        android:background="#fff"
        android:paddingTop="6sp"
        android:textColor="#000"
        android:textCursorDrawable="@drawable/coursor_color"
        android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:paddingLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:text="Id : "
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/admin_can_see_user_id_show"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="5sp"
            android:layout_height="50sp"
            android:layout_marginTop="8sp"
            android:background="#fff"
            android:paddingTop="6sp"
            android:textColor="#000"
            android:textSize="20sp"/>
    </LinearLayout>



        <Button
            android:id="@+id/approveAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:background="#0163AD"
            android:gravity="center"
            android:padding="10sp"
            android:text="Approve Account"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/deleteAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:background="#0163AD"
            android:gravity="center"
            android:padding="10sp"
            android:text="Delete Account"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>
