<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00899B"
            android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view_ET"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"
            app:civ_border_color="#fff"
            app:civ_border_width="5sp"/>

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_below="@id/user_image_view_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:text="Name :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/user_name_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/department_layout"
            android:layout_below="@id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:text="Depart :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/user_Dept_name_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/batch_layout"
            android:layout_below="@id/department_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/batch_Tv"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:text="Batch :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/user_batch_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_below="@id/batch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone_Tv"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:text="Phone :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/user_phone_number_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="5sp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_layout"
            android:layout_below="@id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:text="ID :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/user_id_number_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/id_layout"
            >

            <EditText
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:text="Email :"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/user_email_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:enabled="false"
                android:paddingLeft="5sp"
                android:paddingTop="10sp"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>
<LinearLayout
    android:id="@+id/button_layout"
    android:layout_below="@id/email_layout"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/submit_profile"
        android:layout_width="200dp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/buttonshape"
        android:text="Update"

        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="25sp"/>

</LinearLayout>
    </RelativeLayout>

</ScrollView>
