<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Profile"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view_show"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:civ_border_color="#0163AD"
            app:civ_border_width="5sp"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"/>

        <TextView
            android:id="@+id/user_name_show"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center"
            android:textColor="#000"
            android:textCursorDrawable="@drawable/coursor_color"
            android:text="Name : "/>

        <TextView
            android:id="@+id/user_Dept_name_show"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="department : "/>

        <TextView
            android:id="@+id/user_batch_show"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Batch : "/>
        <TextView
            android:id="@+id/user_email_show"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Email : "/>

    </LinearLayout>

</ScrollView>
