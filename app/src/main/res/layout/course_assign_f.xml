<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:padding="15sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_show_for_course"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/boy"
        app:civ_border_color="#0163AD"
        app:civ_border_width="5sp"/>

    <TextView
        android:id="@+id/user_name_show_for_course"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="50sp"
        android:text="Name : "
        android:textColor="#000"
        android:textCursorDrawable="@drawable/coursor_color"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spinner_course_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>

    <Spinner
        android:id="@+id/spinner_course_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>
    <Spinner
        android:id="@+id/spinner_course_3"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>
    <Spinner
        android:id="@+id/spinner_course_4"
        android:layout_width="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>
<Button
    android:id="@+id/submit_course"
    android:layout_marginTop="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="10sp"
    android:layout_gravity="center"
    android:textColor="#000"
    android:textSize="25sp"
    android:text="Ok"/>

</LinearLayout>

</ScrollView>