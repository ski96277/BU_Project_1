<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view_ET"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:civ_border_color="#0163AD"
            app:civ_border_width="5sp"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"/>

        <EditText
            android:id="@+id/user_name_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center"
            android:textColor="#000"
            android:enabled="false"
            android:textCursorDrawable="@drawable/coursor_color"
            android:hint="Name : "/>

        <EditText
            android:id="@+id/user_Dept_name_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center"
            android:enabled="false"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:hint="department : "/>

        <EditText
            android:id="@+id/user_batch_ET"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:enabled="false"
            android:hint="Batch : "/>
        <EditText
            android:id="@+id/user_phone_number_ET"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:hint="Phone Number : "/>
        <EditText
            android:id="@+id/user_id_number_ET"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:enabled="false"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:hint="Id : "/>
        <TextView
            android:id="@+id/user_email_ET"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Email : "/>
        <Button
            android:id="@+id/submit_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update"
            android:textAllCaps="false"
            android:background="#0163AD"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

    </LinearLayout>

</ScrollView>
