<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66ACB6"
    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                   
                    android:orientation="vertical">

        <TextView
            android:id="@+id/userinformationTV"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="#00899B"
            android:gravity="center"
            android:text="Enter Your Information...."
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/select_image_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:text="select image"
            android:textColor="#000"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/select_image_TV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"
            app:civ_border_color="#00899B"
            app:civ_border_width="3dp"/>


        <View
            android:id="@+id/dividerk"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/circle_image_view"
            android:background="@android:color/black"/>

        <LinearLayout
            android:id="@+id/fullName_ET_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_image_view"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00889B"
                android:gravity="center"
                android:text="Name :"
                android:textColor="#000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/fullName_ET"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:layout_marginLeft="2sp"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="center"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>

        <View
            android:id="@+id/below_id_View_"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/fullName_ET_layout"
            android:layout_marginBottom="5sp"
            android:background="@android:color/black"/>

        <LinearLayout
            android:id="@+id/department_ET_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/below_id_View_"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00889B"
                android:gravity="center"
                android:text="Department :"
                android:textColor="#000"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/department_ET"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_below="@id/fullName_ET_layout"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="center"
                android:hint="Department"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>

        </LinearLayout>

        <View
            android:id="@+id/below_id_View"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/department_ET_layout"
            android:layout_marginBottom="5sp"
            android:background="@android:color/black"/>

