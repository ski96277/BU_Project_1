<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin can see user Profile"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/admin_can_see_user_image_view_show"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:civ_border_color="#0163AD"
            app:civ_border_width="5sp"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"/>

        <TextView
            android:id="@+id/admin_can_see_user_name_show"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textColor="#000"
            android:textCursorDrawable="@drawable/coursor_color"
            android:text="Name : "/>
        <TextView
            android:id="@+id/admin_can_see_user_type_show"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textColor="#000"
            android:textCursorDrawable="@drawable/coursor_color"
            android:text="User Type : "/>

        <TextView
            android:id="@+id/admin_can_see_user_Dept_name_show"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="department : "/>

        <TextView
            android:id="@+id/admin_can_see_user_batch_show"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Batch : "/>
        <TextView
            android:id="@+id/admin_can_see_user_email_show"

            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Email : "/>
        <TextView
            android:id="@+id/admin_can_see_user_phone_number_show"
            android:textSize="20sp"

            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Phone : "/>
        <TextView
            android:id="@+id/admin_can_see_user_id_show"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textCursorDrawable="@drawable/coursor_color"
            android:textColor="#000"
            android:text="Id : "/>
        <Button
            android:id="@+id/approveAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Approve Account"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="20sp"/>

        <Button
            android:id="@+id/deleteAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Delete Account"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="20sp"/>

    </LinearLayout>

</ScrollView>
