<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00899B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Edit Profile"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_view_ET"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/userinformationTV"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"
            app:civ_border_color="#fff"
            app:civ_border_width="5sp"/>

        <EditText
            android:id="@+id/user_name_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#fff"
            android:enabled="false"
            android:gravity="center"

            android:hint="Name : "
            android:textColor="#000"
            android:textColorHint="#000"
            android:textCursorDrawable="@drawable/coursor_color"/>

        <EditText
            android:id="@+id/user_Dept_name_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:enabled="false"
            android:gravity="center"
            android:hint="department : "

            android:textColor="#000"
            android:textColorHint="#000"
            android:textCursorDrawable="@drawable/coursor_color"/>

        <EditText
            android:id="@+id/user_batch_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:enabled="false"
            android:gravity="center"
            android:hint="Batch : "
            android:textColor="#000"
            android:textColorHint="#000"

            android:textCursorDrawable="@drawable/coursor_color"/>

        <EditText
            android:id="@+id/user_phone_number_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:gravity="center"
            android:hint="Phone Number : "

            android:textColor="#000"
            android:textColorHint="#000"
            android:textCursorDrawable="@drawable/coursor_color"/>

        <EditText
            android:id="@+id/user_id_number_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:enabled="false"
            android:gravity="center"
            android:hint="Id : "
            android:textColor="#000"
            android:textColorHint="#000"
            android:textCursorDrawable="@drawable/coursor_color"/>

        <TextView
            android:id="@+id/user_email_ET"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:gravity="center"
            android:text="Email : "
            android:textColor="#000"
            android:textCursorDrawable="@drawable/coursor_color"/>

        <Button
            android:id="@+id/submit_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="#66ACB6"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="25sp"/>

    </LinearLayout>

</ScrollView>
