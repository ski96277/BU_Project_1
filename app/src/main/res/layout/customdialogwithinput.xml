        <LinearLayout
            android:id="@+id/phone_number_ET_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/below_id_View"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00889B"
                android:gravity="center"
                android:text="Contact :"
                android:textColor="#000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/phone_number_ET"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_below="@id/below_id_View"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="center"
                android:hint="01687870058"
                android:inputType="number"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>


        <View
            android:id="@+id/below_phone_View"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/phone_number_ET_layout"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:background="@android:color/black"/>

        <LinearLayout
            android:id="@+id/address_ET_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/below_phone_View"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00889B"
                android:gravity="center"
                android:text="Address :"
                android:textColor="#000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/address_ET"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_below="@id/below_id_View"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="Address"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/coursor_color"/>
        </LinearLayout>

        <View
            android:id="@+id/below_address_View"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/address_ET_layout"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:background="@android:color/black"/>


    </RelativeLayout>
</ScrollView>