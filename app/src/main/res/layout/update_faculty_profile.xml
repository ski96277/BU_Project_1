<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00899B"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/faculty_image_view_show_ET"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/boy"
            app:civ_border_color="#f9eaea"
            app:civ_border_width="5sp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:text="Name : "
                android:textColor="#000"/>

            <EditText
                android:id="@+id/faculty_name_show_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:text="User Type :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/faculty_type_show_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="8sp"
                android:paddingTop="12sp"
                android:text="Depart :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/faculty_Dept_name_show_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/batch_TV"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:text="Batch :"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/facultu_batch_show"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>
        </LinearLayout>-->

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:text="E-mail :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/faculty_email_show_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_TV"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:text="Phone :"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/faculty_phone_number_show_ET"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="5sp"
                android:layout_weight=".3"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:text="ID : "
                android:textColor="#000"/>

            <EditText
                android:id="@+id/faculty_id_show_ET"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="#fff"
                android:paddingLeft="10sp"
                android:paddingTop="12sp"
                android:textColor="#000"/>
        </LinearLayout>


        <Button
            android:id="@+id/update_faculty_btn_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:text="Update Faculty"
            android:textAllCaps="false"
            android:layout_marginBottom="50sp"
            android:textSize="25sp"/>


    </LinearLayout>
</ScrollView>