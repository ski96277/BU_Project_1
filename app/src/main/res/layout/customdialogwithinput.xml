<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
    android:background="#66ACB6">

    <TextView
        android:id="@+id/userinformationTV"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#00899B"
        android:gravity="center"
        android:text="Enter Your Information...."
        android:textColor="#000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/select_image_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userinformationTV"
        android:text="select image"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/select_image_TV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/boy"
        app:civ_border_color="#00899B"
        app:civ_border_width="3dp"/>


    <View
        android:id="@+id/dividerk"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/circle_image_view"
        android:background="@android:color/black"/>

    <EditText
        android:id="@+id/fullName_ET"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_below="@id/circle_image_view"
        android:ems="10"
        android:gravity="center"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textCursorDrawable="@drawable/coursor_color"/>

    <EditText
        android:id="@+id/department_ET"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/fullName_ET"
        android:ems="10"
        android:gravity="center"
        android:hint="Department"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textCursorDrawable="@drawable/coursor_color"/>

    <View
        android:id="@+id/below_id_View"
        android:layout_width="390dp"
        android:layout_height="2dp"
        android:layout_below="@id/department_ET"
        android:background="@android:color/black"/>
    <EditText
        android:id="@+id/phone_number_ET"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/below_id_View"
        android:ems="10"
        android:gravity="center"
        android:hint="ph :- 01687870058"
        android:inputType="number"
        android:textColor="#000"
        android:textCursorDrawable="@drawable/coursor_color"/>
    <View
        android:id="@+id/below_phone_View"
        android:layout_width="390dp"
        android:layout_height="2dp"
        android:layout_below="@id/phone_number_ET"
        android:background="@android:color/black"/>
</RelativeLayout>